@inject ApplicationUserManager UserManager
@{
    Layout = null;

    var _class = "d-xs-none";

    var user = await UserManager.GetUserAsync(User);

    var userAvatarLink = user.GetAvatarLink(ImageSizeType.Icon);
}

@if (User.Identity.IsAuthenticated)
{
    <li class=" m-nav__item m-topbar__user-profile m-topbar__user-profile--img  m-dropdown m-dropdown--medium m-dropdown--arrow m-dropdown--header-bg-fill m-dropdown--align-right m-dropdown--mobile-full-width m-dropdown--skin-light" data-dropdown-toggle="click">
        <a href="#" class=" @_class m-nav__link m-dropdown__toggle">
            <span class="m-topbar__welcome">
                Привет,&nbsp;
            </span>
            <span class="m-topbar__username">
                @user.Name
            </span>
            <span class="m-topbar__userpic">
                @if (userAvatarLink == null)
                {
                    <img src="~/Metronic5/assets/app/media/img/users/user4.jpg" class="m--img-rounded m--marginless m--img-centered" alt="" />
                }
                else
                {
                    <img src="@userAvatarLink" class="m--img-rounded m--marginless m--img-centered" alt="" />
                }

            </span>
        </a>
        <div class="m-dropdown__wrapper">
            <span class="m-dropdown__arrow m-dropdown__arrow--right m-dropdown__arrow--adjust"></span>
            <div class="m-dropdown__inner">
                <div class="m-dropdown__header m--align-center" style="background: url(/Metronic5/assets/app/media/img/misc/user_profile_bg.jpg); background-size: cover;">
                    <div class="m-card-user m-card-user--skin-dark">
                        <div class="m-card-user__pic">
                            @if (userAvatarLink == null)
                            {
                                <img src="~/Metronic5/assets/app/media/img/users/user4.jpg" class="m--img-rounded m--marginless" alt="" />
                            }
                            else
                            {
                                <img src="@userAvatarLink" class="m--img-rounded m--marginless" alt="" />
                            }

                        </div>
                        <div class="m-card-user__details">
                            <span class="m-card-user__name m--font-weight-500">
                                @user.Name
                            </span>
                            <a href="" class="m-card-user__email m--font-weight-300 m-link">
                                @user.Name
                            </a>
                        </div>
                    </div>
                </div>
                <div class="m-dropdown__body">
                    <div class="m-dropdown__content">
                        <ul class="m-nav m-nav--skin-light">
                            <li class="m-nav__section m--hide">
                                <span class="m-nav__section-text">
                                    Section
                                </span>
                            </li>

                            <li class="m-nav__item">
                                <a href="/Client/Index" class="m-nav__link">
                                    <i class="m-nav__link-icon flaticon-profile-1"></i>
                                    <span class="m-nav__link-title">
                                        <span class="m-nav__link-wrap">
                                            <span class="m-nav__link-text">Мой профиль</span>
                                        </span>
                                    </span>
                                </a>
                            </li>

                            @if (User.IsAdmin() || User.HasRight(UserRight.Seller))
                            {

                                <li class="m-nav__item">
                                    <a href="/Admin/Products" class="m-nav__link">
                                        <i class="m-nav__link-icon fa fa-list"></i>
                                        <span class="m-nav__link-title">
                                            <span class="m-nav__link-wrap">
                                                <span class="m-nav__link-text">
                                                    Товары (Админ)
                                                </span>
                                            </span>
                                        </span>
                                    </a>
                                </li>
                            }

                            <li class="m-nav__item">
                                <a href="/Purchase/MyPurchases" class="m-nav__link">
                                    <i class="m-nav__link-icon flaticon-profile-1"></i>
                                    <span class="m-nav__link-title">
                                        <span class="m-nav__link-wrap">
                                            <span class="m-nav__link-text">
                                                Мои заказы
                                            </span>
                                            <span class="m-nav__link-badge">
                                                <span class="m-badge m-badge--success ajax-load-html" data-ajax-link="/Api/Purchase/Client/Count">
                                                </span>
                                            </span>
                                        </span>
                                    </span>
                                </a>
                            </li>

                            <li class="m-nav__item">
                                <a href="/Catalogue/Favourites" class="m-nav__link">
                                    <i class="m-nav__link-icon fa fa-heart"></i>
                                    <span class="m-nav__link-title">
                                        <span class="m-nav__link-wrap">
                                            <span class="m-nav__link-text">
                                                Избранное
                                            </span>
                                            <span class="m-nav__link-badge">
                                                <span class="m-badge m-badge--success ajax-load-html" data-ajax-link="/Api/Likes/Count">
                                                </span>
                                            </span>
                                        </span>
                                    </span>
                                </a>
                            </li>






                            <li class="m-nav__separator m-nav__separator--fit"></li>
                            <li class="m-nav__item">
                                <a href="profile.html" class="m-nav__link">
                                    <i class="m-nav__link-icon flaticon-info"></i>
                                    <span class="m-nav__link-text">
                                        Часто задаваемые вопросы
                                    </span>
                                </a>
                            </li>
                            <li class="m-nav__item">
                                <a href="profile.html" class="m-nav__link">
                                    <i class="m-nav__link-icon flaticon-lifebuoy"></i>
                                    <span class="m-nav__link-text">
                                        Служба поддержки
                                    </span>
                                </a>
                            </li>
                            <li class="m-nav__separator m-nav__separator--fit"></li>
                            <li class="m-nav__item">
                                <a href="/Account/Logout" class="btn m-btn--pill btn-secondary m-btn m-btn--custom m-btn--label-brand m-btn--bolder">
                                    Выйти
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </li>
}
else
{
    <li class="m-nav__item m-topbar__user-profile m-topbar__user-profile--img  m-dropdown m-dropdown--medium m-dropdown--arrow m-dropdown--header-bg-fill m-dropdown--align-right m-dropdown--mobile-full-width m-dropdown--skin-light">
        <a href="/Account/Login" class="m-nav__link m-dropdown__toggle">

            <span class="m-topbar__username">
                Войти / Зарегистрироваться
            </span>

        </a>

    </li>
}

