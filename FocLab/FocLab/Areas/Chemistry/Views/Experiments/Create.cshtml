@using FocLab.Logic
@model FocLab.Logic.Models.Tasks.ChemistryTaskModel
@{
    Layout = ChemistrySettings.LayoutPath;
    ViewBag.Title = "Задание";
}

<div style="height:20px">

</div>

<div class="row">
    <div class="col-md-12">
        <a href="/Chemistry/Tasks/Index" class="btn btn-primary">
            <i class="fa fa-list"></i>
            Список задач
        </a>

        <a href="/Chemistry/Experiments/Index" class="btn btn-primary">
            <i class="fa fa-list"></i>
            Список экспериментов
        </a>
    </div>
</div>

<div style="height:20px">

</div>

<h2>
    Вы создаете эксперимент к задаче <strong>@Model.Title</strong>
</h2>


<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>

        </thead>

        <tbody>
            <tr>
                <th>
                    <button class="btn btn-primary btn-block" onclick="CreateExperiment()">
                        <strong>
                            Создать эксперимент
                        </strong>
                    </button>
                </th>
            </tr>
        </tbody>
    </table>
</div>



@section Scripts{
    <script>
        function CreateExperiment() {

            ToastrWorker.ShowError("Эксперименты пока находятся в разработке");
            return;

            var data = {
                ChemistryTaskId: "@Model.Id"
            };

            Requester.SendPostRequestWithAnimation('/Chemistry/Experiments/Create', data, x => {
                if (x.IsSucceeded) {
                    setTimeout(() => { location.href = "/Chemistry/Experiments/Index" }, 1500);
                }
            });
        }
    </script>
}