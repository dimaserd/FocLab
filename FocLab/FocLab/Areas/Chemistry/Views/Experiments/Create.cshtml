@using FocLab.Logic
@model FocLab.Model.Entities.Chemistry.ChemistryTask
@{
    Layout = ChemistrySettings.LayoutPath;
    ViewBag.Title = "Задание";

    string viewsChemistry = "~/Areas/Chemistry/Views/Chemistry";
}

@Html.Partial($"{viewsChemistry}/Scripts/SubstanceScripts.cshtml")

<div style="height:20px">

</div>

<div class="row">
    <div class="col-md-12">
        <a href="/Chemistry/Chemistry" class="btn btn-primary">
            <i class="fa fa-list"></i>
            Список задач
        </a>

        <a href="/Chemistry/Chemistry/Experiments" class="btn btn-primary">
            <i class="fa fa-list"></i>
            Список экспериментов
        </a>
    </div>
</div>

<h2>
    Вы создаете эксперимент к задаче <strong>@Model.Title</strong>
</h2>


<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>

        </thead>

        <tbody>
            <tr>
                <th>
                    <button class="btn btn-primary btn-block" onclick="CreateExperiment()">
                        <strong>
                            Создать эксперимент
                        </strong>

                    </button>
                </th>
            </tr>
        </tbody>
    </table>
</div>



@section Scripts{
    <script>
        function CreateExperiment() {

            var data = {
                ChemistryTaskId: "@Model.Id"
            };

            $.ajax({
                url: '/Chemistry/Experiments/Create',
                type: 'POST',
                data: data,
                dataType: 'json',
                success: function (response) {

                    modalWorker.HideModals();
                    $("#loadingModal").modal('hide');
                    alert(response.Message);

                    if (response.IsSucceeded) {
                        location.href = "/Chemistry/Experiments/Index";
                    }
                    
                }
            });
        }
    </script>
}