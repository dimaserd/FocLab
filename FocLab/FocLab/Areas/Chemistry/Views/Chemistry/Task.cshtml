@using FocLab.Logic
@using FocLab.Logic.Extensions
@using FocLab.Logic.Models
@using FocLab.Model.Entities.Chemistry
@using FocLab.Model.Enumerations
@model FocLab.Logic.Models.Chemistry_Task
@{
    Layout = ChemistrySettings.LayoutPath;
    ViewBag.Title = "Задание";

    var files = new[]
    {
        new Tuple<string, string, int, int>("File1", "Файл1", Model.File1.FileId, 1),

        new Tuple<string, string, int, int>("File2","Файл2", Model.File2.FileId, 2),

        new Tuple<string,string, int, int>("File3","Файл3", Model.File3.FileId, 3),

        new Tuple<string,string, int, int>("File4","Файл4", Model.File4.FileId,4),
    };

    var isNotAdmin = !User.HasRight(UserRight.Admin) && !User.HasRight(UserRight.SuperAdmin);

    var userId = User.Identity.GetUserId();

    var experiments = ViewData["experiments"] as List<ChemistryTaskExperiment>;

    var viewsChemistry = "~/Areas/Chemistry/Views/Chemistry";
}

@await Html.PartialAsync($"{viewsChemistry}/Scripts/SubstanceScripts.cshtml")

<div style="height:20px">

</div>

<div class="row">
    <div class="col-md-12">

        <a href="/Chemistry/Chemistry" class="btn btn-primary" style="margin-top:5px">
            <i class="fa fa-list"></i>
            Список задач
        </a>

        <a href="/Chemistry/Experiments/Create/@Model.Id" class="btn btn-success" style="margin-top:5px">
            <i class="fa fa-plus-circle"></i>
            Создать эксперимент
        </a>

        @if (User.IsAdmin())
        {
            <a href="/Chemistry/Chemistry/EditTask/@Model.Id" class="btn btn-warning" style="margin-top:5px">
                <i class="fa fa-pencil-square"></i>
                Редактировать
            </a>

            if (!Model.Deleted)
            {
                <a onclick="RemoveTask('@Model.Id')" class="btn btn-danger" style="margin-top:5px">
                    <i class="fa fa-trash-o"></i>
                    Удалить
                </a>
            }

            if (Model.Deleted)
            {
                <a onclick="CancelRemoving('@Model.Id')" class="btn btn-success" style="margin-top:5px">
                    Отменить удаление
                </a>
            }


        }


        <a href="/Chemistry/Chemistry/PrintTask/@Model.Id" class="btn btn-success" style="margin-top:5px">
            <i class="fa fa-print" aria-hidden="true"></i>
            Печать документа
        </a>

    </div>
</div>

<hr />


<h3>
    Задание <strong>@Model.Title</strong>
</h3>

<div style="height:20px">

</div>

<h4>
    <strong>
        Файлы для решения
    </strong>
</h4>

<div class="row">
    <div class="col-md-12">

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Статус файла
                        </th>

                        @if (isNotAdmin)
                        {
                            <th>
                                Загрузка файла
                            </th>
                        }


                        <th>
                            Действия
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var file in files)
                    {
                        <tr>
                            <td>
                                @if (file.Item3 == 0)
                                {
                                    <strong>
                                        <span class="text-danger">@file.Item2 не загружен</span>
                                    </strong>
                                }
                                else
                                {
                                    <strong>
                                        <span class="text-success">@file.Item2 уже загружен</span>
                                    </strong>
                                }


                            </td>

                            @if (isNotAdmin)
                            {
                                <td>

                                    <input id="@file.Item4" type="file" name="@file.Item4" />
                                </td>
                            }


                            <td>
                                <div class="row">


                                    @if (file.Item3 == 0 && isNotAdmin)
                                    {
                                        <div class="col-md-12">
                                            <button class="btn btn-success btn-block" onclick="UpdateFileByType('@file.Item4')">
                                                Загрузить файл
                                            </button>
                                        </div>
                                    }
                                    else if (isNotAdmin)
                                    {
                                        <div class="col-md-12">
                                            <button class="btn btn-success btn-block" onclick="UpdateFileByType('@file.Item4')">
                                                Обновить файл
                                            </button>
                                        </div>
                                    }



                                    @if (file.Item3 > 0)
                                    {
                                        <div class="col-md-12" style="margin-top:10px">
                                            <a class="btn btn-primary btn-block" href="/Files/GetDbFileById/@file.Item3">
                                                Скачать файл
                                            </a>
                                        </div>
                                    }

                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>



    </div>

</div>


<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th>
                            Уст. качество
                        </th>

                        <th>
                            Получ. качество
                        </th>
                    </tr>

                    <tr>
                        <td>
                            @Model.AdminQuality
                        </td>

                        <td>
                            @Html.TextBox( "Quality", Model.PerformerQuality, new { @class = "form-control" })
                        </td>
                    </tr>

                    <tr>
                        <th>
                            Уст. колличество
                        </th>

                        <th>
                            Получ. колличество
                        </th>
                    </tr>

                    <tr>
                        <td>
                            @Model.AdminQuantity
                        </td>

                        <td>
                            @Html.TextBox( "Quantity", value: Model.PerformerQuantity, htmlAttributes: new { @class = "form-control" })
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>

@await Html.PartialAsync($"{viewsChemistry}/Partials/TaskExperiments.cshtml", model: experiments)



<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <tbody>

            <tr>
                <th colspan="2" class="text-center">
                    Изображение реакции
                </th>
            </tr>

            @if (Model.ReactionSchemaImage.FileId > 0)
            {
