@using FocLab.App.Logic.Settings.Statics
@{
    Layout = null;

    const bool showRegistration = false;
}


<!DOCTYPE html>
<html lang="en">
<!-- begin::Head -->
<head>
    <meta charset="utf-8" />
    <title>
        Авторизация @MainSettings.ApplicationName
    </title>
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!--begin::Web font -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
          WebFont.load({
            google: {"families":["Poppins:300,400,500,600,700","Roboto:300,400,500,600,700"]},
            active: function() {
                sessionStorage.fonts = true;
            }
          });
    </script>
    <!--end::Web font -->
    <!--begin::Base Styles -->
    <link href="~/Metronic5/assets/demo/default/assets/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/Metronic5/assets/demo/default/assets/demo/default/base/style.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Base Styles -->
    <link rel="shortcut icon" href="~/Metronic5/assets/demo/default/assets/demo/default/media/img/logo/favicon.ico" />
</head>
<!-- end::Head -->
<!-- end::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500" rel="stylesheet">
    <style>

        body {
            font-family: 'Roboto', sans-serif;
        }

        @@media screen and (max-device-width: 768px) {
            input[type="color"],
            input[type="date"],
            input[type="datetime"],
            input[type="datetime-local"],
            input[type="email"],
            input[type="month"],
            input[type="number"],
            input[type="password"],
            input[type="search"],
            input[type="tel"],
            input[type="text"],
            input[type="time"],
            input[type="url"],
            input[type="week"],
            select:focus,
            textarea {
                font-size: 16px !important;
            }
        }
    </style>

    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div id="m_login" class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2" style="background-image: url(/Metronic5/assets/demo/default/assets/app/media/img/bg/bg-3.jpg);">
            <div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
                <div class="m-login__container">
                    <div class="m-login__logo">
                        <a href="~/">
                            <img src="~/Metronic5/assets/demo/default/assets/app/media/img/logos/logo-1.png">
                        </a>
                    </div>

                    <!--BEGIN Вход-->
                    <div class="m-login__signin">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                Авторизоваться в @MainSettings.ApplicationName
                            </h3>
                        </div>


                        <form id="loginForm" class="m-login__form m-form" action="/Account/Login">

                            @Html.AntiForgeryToken()

                            <div class="form-group m-form__group">
                                <input id="loginEmail" class="form-control m-input" type="text" placeholder="Email" name="email" autocomplete="off">
                            </div>
                            <div class="form-group m-form__group">
                                <input id="loginPassword" class="form-control m-input m-login__form-input--last" type="password" placeholder="Пароль" name="password">
                            </div>
                            <div class="row m-login__form-sub">
                                <div class="col m--align-left m-login__form-left">
                                    <label class="m-checkbox  m-checkbox--focus">
                                        <input type="checkbox" name="remember">
                                        Запомнить
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col m--align-right m-login__form-right">
                                    <a href="javascript:;" id="m_login_forget_password" class="m-link">
                                        Забыли пароль?
                                    </a>
                                </div>
                            </div>
                            <div class="m-login__form-action">
                                <button id="m_login_signin_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">
                                    Войти
                                </button>
                            </div>
                        </form>
                    </div>
                    <!--END Вход-->
                    <!--BEGIN Регистрация-->
                    <div class="m-login__signup">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                Зарегистрироваться
                            </h3>
                            <div class="m-login__desc">
                                Заполните данные своей учетной записи:
                            </div>
                        </div>

                        <form class="m-login__form m-form" action="">
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" id="registerName" type="text" placeholder="Иван Петров" name="fullname">
                            </div>
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" id="registerEmail" type="text" placeholder="ivanpetrov@mail.com" name="email" autocomplete="off">
                            </div>
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" id="registerPhoneNumber" type="text" placeholder="89166044960" name="phoneNumber" autocomplete="off">
                            </div>
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="password" id="registerPassword" placeholder="Пароль" name="password">
                            </div>
                            <div class="form-group m-form__group">
                                <input class="form-control m-input m-login__form-input--last" type="password" id="registerConfirmPassword" placeholder="Подтверждение пароля" name="rpassword">
                            </div>

                            <div class="m-login__form-action">
                                <button id="m_login_signup_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn">
                                    Зарегистрироваться
                                </button>
                                &nbsp;&nbsp;
                                <button id="m_login_signup_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom  m-login__btn">
                                    Отмена
                                </button>
                            </div>
                        </form>
                    </div>
                    <!--END Регистрация-->
                    <!--BEGIN Забыли пароль-->
                    <div class="m-login__forget-password">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                Забыли пароль ?
                            </h3>
                            <div class="m-login__desc">
                                Введите свой email чтобы востановить пароль:
                            </div>
                        </div>
                        <form class="m-login__form m-form" action="">
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="Email" name="email" id="m_email" autocomplete="off">
                            </div>
                            <div class="m-login__form-action">
                                <button id="m_login_forget_password_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn m-login__btn--primaryr">
                                    Востановить
                                </button>
                                &nbsp;&nbsp;
                                <button id="m_login_forget_password_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom m-login__btn">
                                    Отмена
                                </button>
                            </div>
                        </form>
                    </div>
                    <!--END Забыли пароль-->
                    <!--BEGIN Подтверждение входа-->
                    <div class="m-login__confirm-auth" style="display:none">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                Подтверждение входа
                            </h3>
                            <div class="m-login__desc">
                                Введите код для того чтобы войти:
                            </div>
                        </div>
                        <form class="m-login__form m-form" action="">
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="Код" name="code" id="m_code" autocomplete="off">
                            </div>
                            <div class="m-login__form-action">
                                <button id="m_login_confirm_auth_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn m-login__btn--primaryr">
                                    Войти
                                </button>
                                &nbsp;&nbsp;
                                <button id="m_login_confirm_auth_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom m-login__btn">
                                    Отмена
                                </button>
                            </div>
                        </form>
                    </div>
                    <!--END Подтверждение входа-->

                    @if (showRegistration)
                    {
                        <div class="m-login__account">
                            <span class="m-login__account-msg">
                                Еще не зарегистрированы?
                            </span>
                            &nbsp;&nbsp;
                            <a href="javascript:;" id="m_login_signup" class="m-link m-link--light m-login__account-link">
                                Зарегистрироваться
                            </a>
                        </div>
                    }
                    

                    <div class="m-login__account" style="display:none">
                        <span class="m-login__account-msg">
                            Показать окно подтверждения кода
                        </span>
                        &nbsp;&nbsp;
                        <a href="javascript:;" id="m_login_confirm-auth" class="m-link m-link--light m-login__account-link">
                            Показать
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end:: Page -->
    <!--begin::Base Scripts -->
    <script src="~/Metronic5/assets/demo/default/assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/Metronic5/assets/demo/default/assets/demo/default/base/scripts.bundle.js" type="text/javascript"></script>
    <!--end::Base Scripts -->
    <!--begin::Page Snippets -->
    
    <script src="~/js/Core.min.js"></script>

    <script src="~/Metronic5/Scripts/login.js" type="text/javascript"></script>

    <!--end::Page Snippets -->
</body>
<!-- end::Body -->
</html>
